- content_for :stylesheets do
  = stylesheet_link_tag 'admin/images'

%h2= @group.name
%p#change_group_name= link_to 'change group name', [:edit, :admin, @group]

#main_image
  %ul.controls
    %li
      = link_to 'Add Image', new_admin_group_image_url(@group)
    %li
      = link_to_if @image, 'Change Thumbnail', [:edit, :admin, @group, @image]
    %li
      = link_to_if @image, 'Remove', [:admin, @group, @image], :method => 'delete'
  = image_tag image?(@image)

%ul#images
  - for image in @group.images
    %li[image]
      = link_to image_tag(image.url('thumb')), admin_group_image_url(@group, image)
      = link_to 'Remove', '#'
